{
  "name": "@graphql-monorepo/react-sdk",
  "version": "1.0.0",
  "description": "React Query hooks for GraphQL operations",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "files": [
    "src"
  ],
  "scripts": {
    "codegen": "graphql-codegen --config codegen.yml",
    "introspect": "get-graphql-schema http://localhost:8000/graphql > schema.graphql",
    "generate": "npm run introspect && npm run codegen",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.85.5",
    "graphql-request": "^6.1.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.0",
    "@graphql-codegen/typescript": "^4.0.1",
    "@graphql-codegen/typescript-operations": "^4.0.1",
    "@graphql-codegen/typescript-react-query": "^6.1.1",
    "get-graphql-schema": "^2.1.2",
    "graphql": "^16.8.1",
    "typescript": "^5.0.0"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "@tanstack/react-query": ">=5.0.0"
  },
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "require": "./src/index.ts",
      "types": "./src/index.ts"
    }
  }
}
